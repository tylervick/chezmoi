#!/bin/zsh
#
# .aliases
#

alias -- '-- -'='cd -'
alias -- '..'='cd ..'
alias -- '...'='cd ../..'
alias -- '....'='cd ../../..'
alias -- '.....'='cd ../../../..'
alias -- 'b64'='pbpaste | base64 --decode'
alias -- 'cd..'='cd ..'
alias -- 'cp'='cp -v'
alias -- 'd'='docker'
alias -- 'dc'='docker compose'
alias -- 'flushdns'='dscacheutil -flushcache'
alias -- 'g'='git'
alias -- 'gam'='git commit -am'
alias -- 'gap'='git add -p'
alias -- 'gb'='git branch'
alias -- 'gbr'='git branch --no-color | sed -e '\''/^[^*]/d'\'' -e '\''s/* \(.*\)/\1/'\'''
alias -- 'gbt'='git_list_branches'
alias -- 'gc'='git checkout'
alias -- 'gchp'='git cherry-pick'
alias -- 'gcl'='git clone'
alias -- 'gcln'='git clean -xfd'
alias -- 'gcm'='git checkout master'
alias -- 'gcmp'='git checkout master && git pull origin master'
alias -- 'gd'='git diff'
alias -- 'gdtp'='git stash pop'
alias -- 'gf'='git reflog'
alias -- 'ggmp'='git checkout -'
alias -- 'gl'='git log'
alias -- 'glp5'='git log -5 --pretty --oneline'
alias -- 'glsw'='git log -S'
alias -- 'glt'='git log --all --graph --decorate --oneline --simplify-by-decoration'
alias -- 'gm'='git commit -m'
alias -- 'gp'='git push origin HEAD'
alias -- 'gpo'='git push origin'
alias -- 'gpt'='git push origin HEAD && git push --tags'
alias -- 'gpu'='git pull origin HEAD --prune'
alias -- 'gra'='git remote add'
alias -- 'grok'='ngrok start rem.jsbin-dev.com static.rem.jsbin-dev.com learn.rem.jsbin-dev.com'
alias -- 'grr'='git remote rm'
alias -- 'gs'='git status'
alias -- 'gsl'='git shortlog -sn'
alias -- 'gss'='git status -s'
alias -- 'gst'='git stash'
alias -- 'gta'='git tag -a -m'
alias -- 'gws'='git diff --shortstat "@{0 day ago}"'
alias -- 'gwts'='git ls-files | xargs wc -l'
alias -- 'ip'='dig +short myip.opendns.com @resolver1.opendns.com'
alias -- 'k'='kubectl'
alias -- 'killport'='(){kill $(lsof -t -i:$1);}'
alias -- 'kp'='k get pods'
alias -- 'localip'='ipconfig getifaddr en1'
alias -- 'mv'='mv -v'
alias -- 'myip'='ifconfig | grep '\''inet '\'' | grep -v 127.0.0.1 | awk '\''{print \$2}'\'''
alias -- 'o'='open'
alias -- 'oo'='open .'
alias -- 'rm'='rm -i'
alias -- 'sudo'='sudo '
alias -- 'ungz'='gunzip -k'
alias -- 'v'='vim'
alias -- 'wip'='git commit -m'\''WIP'\'' . && git push origin HEAD'
alias -- '~'='cd ~'
alias -- 'f'='open .'
alias -- 'lg'='lazygit'
